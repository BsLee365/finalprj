{{>layout/header}}
<h1> 회원정보 수정</h1>

<div>
    <div class="col-md-12">
        <form>
            <div class="form-group">
                <label for="id">회원 번호</label>
                <input type="text" class="form-control" id="id" value="{{members.id}}" readonly>
            </div>

            <div class="form-group">
                <label for="title"> 이름 </label>
                <input type="text" class="form-control" id="name" value="{{members.name}}" readonly>
            </div>

            <div class="form-group">
                <label for="author"> 전화번호 </label>
                <input type="text" class="form-control" id="tel" value="{{members.tel}}">
            </div>

            <div class="form-group">
                <!--content or contents?-->
                <label for="content"> 주소 </label>
                <textarea class="form-control" id="addr">{{members.addr}}</textarea>
            </div>
        </form>
        <!--수정 버튼-->
        <a href="/" role="button" class="btn btn-secondary"> 취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정완료</button>
        <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
    </div>
</div>
{{>layout/footer}}